---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Nav from '../../components/Nav.astro';
import Footer from '../../components/Footer.astro';
import '../../styles/global.css';
import Lightbox from '../../components/Lightbox.astro';


export async function getStaticPaths() {
    const projects = await getCollection('projects');
    return projects.map((project) => ({
        params: { slug: project.slug },
        props: { project },
    }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---
<Layout>
    <Nav />
    <div class="hero" style={`background: linear-gradient(25deg, #0000008c, #00000000), url('${project.data.image}') no-repeat, center center; background-size: cover;`}>
        <div class="">
            <span>{project.data.tag}</span>
            <h1>{project.data.title}</h1>
        </div>
    </div>
    <section>
        <div class="bloque-texto-1">
            <h2>Detalles</h2>
            <p>{project.data.summary}</p>
            <!-- <img src="/public/img/modules-inline.svg" alt="modulos"> -->
            <div class="tools">
                {project.data.tools && project.data.tools.map((tool) => (
                    <p>{tool}</p>
                ))};
            </div>
        </div>
        <article>
            <Content />
        </article>
    </section>
    <Lightbox />
    <Footer />
</Layout>






<style>
    body {
        margin-top: 0 !important;
    }

    .hero {
        position: relative;
        display: flex;
        justify-content: center;
        
        width: 100%;
        height: 50vh;
        
        background-size: cover;
        background-position: center;
    }

    .hero div {
        position: absolute;
        display: flex;
        gap: 1rem;
        flex-direction: column;
        bottom: 0;
        left: 4rem;
        padding: 1rem;
        margin: 0 auto;
        text-align: start;
    }

    .hero h1 {
        max-width: 800px;
        padding: 0rem;
        bottom: 2rem;

        font-weight: 400;
        font-family: var(--font-heading);
        font-size: 2.5rem;
        line-height: 2.5rem;
        color: var(--color-text);
        text-align: start;
    }

    section {
        padding: 2rem;
        max-width: 100%;
        margin: 0 3rem;
    }

    h2 {
        font-weight: 300;
        font-size: 2.45rem;
    }

    p {
        font-size: .85rem;
        margin-bottom: 2rem;
        color: var(--color-ng);
    }

    .bloque-texto-1 {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        margin: 4rem 0rem 4rem;
        border-bottom: 1px solid #b1b1b1;
    }

    span {
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 2px;
        color: var(--color-bl);
        background-color: var(--color-ng);
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        width: fit-content;
    }

    .bloque-texto-1 > div {
        grid-column: 2;
    }

    .bloque-texto-1 > p {
        grid-column: 2 / -1;
    }

    .bloque-texto-1 > p:first-of-type {
        font-size: 1.25rem;
    }

    /* .bloque-texto-1 img {
        width: 30%;
        object-fit: cover;
        padding: 0rem 3rem 0rem 0rem;
    } */

    .tools {
        display: flex;
        gap: .5rem;
        align-items: center;
        margin-bottom: 4rem;
    }

    .tools p {
        padding: .25rem .5rem;
        border-radius: 4px;
        background-color: var(--color-ng);
        color: var(--color-bl);
    }

    article {
        padding-top: 2rem;
    }

    article :global(.text-project) {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
        margin-bottom: 4rem;
        font-size: .95rem;
        line-height: 1.6;
        color: var(--color-ng);
    }

    article :global(.gallery-project) {
        columns: 3;
        gap: 1rem;
    }

    article :global(.gallery-project img),
    article :global(.gallery-project video) {
        width: 100%;
        height: auto;
        transition: all .3s ease;
    }

    article :global(.gallery-project div) {
        overflow: hidden;
        margin-bottom: 1rem;
        break-inside: avoid;
        transition: all .3s ease;
    }

    article :global(.gallery-project div p) {
        margin: 0;
    }

    @media (hover: hover) {
        article :global(.gallery-project img):hover,
        article :global(.gallery-project video):hover {
            cursor: pointer;
            transform: scale(1.05);
        }        
        article :global(.gallery-project div):hover {
            border-radius: 12px;
        }
    }

</style>