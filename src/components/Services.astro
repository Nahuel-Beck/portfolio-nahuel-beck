---
import '../styles/global.css';
import { getCollection } from 'astro:content';
import CardsServices from './CardsServices.astro';

const allServices = await getCollection('services');
---

<section>
    <h3>Servicios que ofrezco</h3>
    <p>Explora los diversos servicios que ofrezco para ayudarte a alcanzar tus objetivos.</p>
    
    <div class="services-grid">
        {allServices.map((service) => (
            <CardsServices 
                icon={service.data.icon}
                title={service.data.title} 
                description={service.data.description} 
                slug={service.slug} 
            />
        ))}
    </div>
</section>

<style>
    section {
        text-align: center;
        padding: 3rem 1rem;
    }

    section h3 {
        font-weight: 200;
        font-size: 2rem;
        margin-bottom: 1rem;
    }

    section p {
        font-weight: 300;
        margin: 0 auto 2rem auto;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        padding: 2rem 4rem;
    }
</style>