---
import logo from "/public/img/logo.svg";
---
<footer>
    <section>
        <div class="marca">
            <img src={logo.src} alt="Logo Nahuel Beck" />
        </div>
        <div class="info-footer">
            <p>© 2024 Nahuel Beck. Todos los derechos reservados.</p>
            <p>Diseñado y desarrollado por Nahuel Beck.</p>
        </div>
    </section>
    <section>
        <div class="redes">
            <ul>
                <li><a href="https://www.linkedin.com/in/nahuel-beck/" target="_blank" rel="noopener noreferrer">LinkedIn</a></li>
                <li><a href="#">link</a></li>
                <li><a href="#">link</a></li>
                <li><a href="#">Colaboremos</a></li>
            </ul>
    </section>
    <section>
        <p>Algún textito lindo</p>
    </section>
</footer>

<style>
    footer {
        display: flex;
        gap: auto;
        align-items: center;
        justify-content: space-around;
        padding: 2rem;
        background-color: #ccc;
        text-align: start;
    }

    img {
        width: 150px;
    }

    p, a {
        color: #333;
    }

    div.redes ul {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 0;
        margin: 0;
    }

    footer a {
        display: inline-block;
        text-decoration: none;
        color: inherit;
        padding-bottom: .1rem;
        transition: all .3s ease;
    }

    @media (hover: hover) {
        footer a:hover {
            border-bottom: 1px solid #333;
            color: #333;
            transform: translateY(-4px);
        }
    }
</style>